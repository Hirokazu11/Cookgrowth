<% provide(:title, "ジストモを探す") %>
<div id="fh5co-portfolio">
  <div class="container">
    <h1>ジストモ(自炊友達)を探そう！</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_tag(yield(:path), :method => 'get') do %>
          <div class="input-group">
            <%= select_tag :search, options_for_select([['---自炊歴から探す---', ''], ['ビギナー', '0'], 
                                                        ['ルーキー', '1'], ['エース', '2'], ['ベテラン', '3'],
                                                        ['マスター', '4']]), class: "form-control" %>
            <span class="input-group-btn">
              <%= submit_tag "フィルター", :name => nil, class: "btn btn-primary" %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
        <%= will_paginate %>
    <ul class="users">
      <%= render @users %>
    </ul>
    <%= will_paginate %>
  </div>
</div>