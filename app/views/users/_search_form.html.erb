<!--検索拡張機能-->
<%= form_tag(yield(:path), :method => 'get') do %>
  <div class="input-group">
    <%= text_field_tag :search, "", placeholder: yield(:default), class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "検索", :name => nil, class: "btn btn-primary" %>
    </span>
  </div>
<% end %>

