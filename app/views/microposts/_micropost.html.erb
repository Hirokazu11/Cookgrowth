<li id="micropost-<%= micropost.id %>">
  <div class="row">
    <div class="col-md-7">
      <h4><%= link_to gravatar_for(micropost.user,size: 50), micropost.user %></h4>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <span class="content">
        <%= link_to image_tag(micropost.picture.url), micropost_path(micropost) %>
      </span>
      <span class="timestamp">
        調理日 <%= time_ago_in_words(micropost.created_at) %> 前
        <% if current_user?(micropost.user) %>
          <%= link_to "削除", micropost, method: :delete,
                              data: { confirm: "本当に削除しますか?" } %>
        <% end %>
      </span>
      <%= render "likes/like", micropost: micropost %>
    </div>
    <div class="col-md-5">
      <h3 class="title">料理名：<%= micropost.title %></h3><br>
      <h4><%= micropost.content %></h4>
      <% if micropost.user.cooking_history.present? %>
        <h4 class="cooking-history"> # <%= micropost.user.cooking_history %></h4>
      <% end %>
    </div>
  </div>
</li>
